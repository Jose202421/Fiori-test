<core:FragmentDefinition 
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Panel>
        <Button  id="btnShowCity" text="{i18n>btnShowCity}" press="onShowCity" visible="{jsonModelConfig>/visibleBtnShowCity}" class="sapUiSmallMargin"/>
        <Button  id="btnHideCity" text="{i18n>btnHideCity}" press="onHideCity" visible="{jsonModelConfig>/visibleBtnHideCity}" class="sapUiSmallMargin"/>
        <Table id="tableEmployee" items="{odataNorthwind>/Employees}">
            <columns>
                <Column >
                    <header>
                        <Label text="{i18n>tableID}" ></Label>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="{i18n>tableName}" ></Label>
                    </header>
                </Column>
                <Column >
                    <header>
                        <Label text="{i18n>tableCountry}" ></Label>
                    </header>
                </Column>
                <Column visible="{jsonModelConfig>/visibleCity}" >
                    <header>
                        <Label text="{i18n>tableCity}" ></Label>
                    </header>
                </Column>
                <Column width="100px">
                    <header>
                        <Label text="{i18n>showDetail}" ></Label>
                    </header>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Navigation" press="showEmployee">
                    <cells>
                        <Label text="{odataNorthwind>EmployeeID}"/>
                        <Label text="{odataNorthwind>LastName}, {odataNorthwind>FirstName}"/>
                        <Label text="{odataNorthwind>Country}"/>
                        <Label text="{odataNorthwind>City}"  />
                        <core:Icon src="sap-icon://show" press="showOrders" /> 
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <HBox id="ordersTable"></HBox>
    </Panel>


</core:FragmentDefinition >