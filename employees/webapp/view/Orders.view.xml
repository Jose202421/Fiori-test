<mvc:View
    controllerName="joserojas.employees.controller.Orders"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f">

                <Page showHeader="false">
                    <Toolbar class="sapUiTinyMarginTop">
                        <Button icon="sap-icon://nav-back" press="onPressBack" text="{i18n>regresar}"/>
                    </Toolbar>
                    <content>
                        <f:FlexibleColumnLayout id="fcl" backgroundDesign="Solid" layout="{jsonLayout>/ActiveKey}">
                            <f:beginColumnPages>
                                <mvc:XMLView id="masterEmployee" viewName="joserojas.employees.view.MasterEmployee" />
                            </f:beginColumnPages>

                            <f:midColumnPages>
                                <mvc:XMLView id="employeeDetails" viewName="joserojas.employees.view.EmployeeDetails" />
                            </f:midColumnPages>

                            <f:endColumnPages>
                                <Page >
                                </Page>
                            </f:endColumnPages>         
                        </f:FlexibleColumnLayout>                
                    </content>
                    
                    <footer>
                        <Toolbar>
                            <Label text="{i18n>layout}" class="sapUiSmallMargin"  />
                            <Select items="{jsonLayout>/Layout}" selectedKey="{jsonLayout>/ActiveKey}" >
                                <core:Item key="{jsonLayout>Key}" text="{jsonLayout>Text}"></core:Item>
                            </Select>
                        </Toolbar>
                    </footer>
                </Page>                

</mvc:View>