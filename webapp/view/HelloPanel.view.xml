<mvc:View xmlns:f="sap.f" controllerName="joserojas.invoices.controller.HelloPanel"
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">

        <Panel  headerText="{i18n>helloPanel}" 
                class="sapUiResponsiveMargin" 
                width="auto" 
                expandable= "{device>/system/phone}"
                expanded="{= !${device>/system/phone} }">  
            <content>   
                <Button id="helloDialogbutton" 
                        icon="sap-icon://action" 
                        text="{i18n>helloDialogBut}" 
                        press=".onOpenDialog" 
                        class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"  />
                <Button text="{i18n>showHelloButtonText}" 
                        press=".onShowHello" 
                        class="sapUiSmallMarginEnd sapUiHideOnDesktop" />
                <Input  value="{/recipient/name}"
                        valueLiveUpdate="true"
                        width="50%" />
                <Text   text="Hello {/recipient/name}" 
                        class="sapUiSmallMargin boldElements"/>
            </content>
        </Panel>

        <core:Fragment fragmentName="joserojas.invoices.view.Form01" type="XML"></core:Fragment>


</mvc:View>