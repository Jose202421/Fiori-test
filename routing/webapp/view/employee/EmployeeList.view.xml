<mvc:View
	controllerName="joserojas.routing.controller.employee.EmployeeList"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

    <Page 
        id="employeeListPage"
        title="{18n>EmployeeList}"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class= "sapUiResponsiveContentPadding">

        <content>
            <List   id="employeeList"
                    headerText="{i18n>ListOfAllEmployees}"
                    items="{/Employees}" >

                    <items>
                        <StandardListItem 
                            title="{FirstName} {LastName}"
                            iconDensityAware="true"
                            iconInset="false" 
                            type="Navigation"
                            press=".onListItemPressed" />
                    </items>
            </List>
        </content>


    </Page>

</mvc:View>